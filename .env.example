# Environment Variables for Production Deployment
# Copy this file to .env and fill in your actual values

# Required: Secret key for session encryption
SECRET_KEY=your-super-secret-key-here-change-me

# Required: Database URL (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@host:port/database_name
# For SQLite (development only): DATABASE_URL=sqlite:///alphanex.db

# Optional: OpenAI API Key for AI features (leave empty if not using)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Port (usually auto-configured by hosting provider)
PORT=5000

# Optional: Flask environment
FLASK_ENV=production